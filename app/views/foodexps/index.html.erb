<% if !(@user.foodexp.nil?) %>
<div class="variables">
  <%= monthlyfood = 12 * (@user.foodexp.monthlyfood) %>
</div>
<% end %>

<h2 class="title"> Overview of your food expenses. </h2>

<table class="table">
<tr>
  <th></th>
  <th>Daily</th>
  <th>Weekly</th>
  <th>Biweekly</th>
  <th>Monthly</th>
  <th>Yearly</th>
</tr>

<tr id="monthlyfood">
  <td class="index_total">Monthly Food Costs</td>
  <td>$<%= (monthlyfood / 365).round(2) %></td>
  <td>$<%= (monthlyfood / 52).round(2) %></td>
  <td>$<%= (monthlyfood / 26).round(2) %></td>
  <td>$<%= (monthlyfood / 12).round(2) %></td>
  <td>$<%= monthlyfood.round(2) %></td>
</tr>

</table>

<%= link_to "Update Expenses", edit_foodexp_path(current_user), class: 'btn btn-secondary'%>
