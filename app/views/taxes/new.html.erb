<h2 class="title">Complete the form to generate tax expenses.</h2>

<% if @tax.errors.any? %>

  <h2>The following errors prevented the article from getting created</h2>

    <ul>

      <% @tax.errors.full_messages.each do |msg| %>

        <li><%= msg %></li>

      <% end %>

    </ul>

<% end %>


<div class="container">

    <%= form_for @tax do |f| %>

    <h3>Yearly</h3>

    <div class="form-group">
      <div class="field">
        <%= f.label :sincome, "State Income Tax" %>
        <%= f.text_field :sincome %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :fincome, "Federal Income Tax" %>
        <%= f.text_field :fincome %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :fincome, "Federal Income Tax" %>
        <%= f.text_field :fincome %>
      </div>
    </div>

    <%= f.submit "Submit Tax Information", class: "btn btn-primary form-control" %>

    <% end %>
<p>
    <%= link_to "Taxes Overview", taxes_path %>
</p>

<p>
    <%= link_to "Master", master_path %>
</p>

</div>
