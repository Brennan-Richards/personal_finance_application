<div class="variables">
  <% if !(@user.housingexp.nil?) %>
    <% mortgage = 12 * (@user.housingexp.mortgage) %>
    <% propertytax = (@user.housingexp.propertytax) %>
    <%= firetax = (@user.housingexp.firetax) %>
    <%= homeinsurance = (@user.housingexp.homeinsurance) %>
    <%= housingtotal = homeinsurance + firetax + propertytax + mortgage %>
  <% end %>
</div>

<h2 class="title">View your expenses for the housing module below: </h2>

<table class="table">
<tr>
  <th></th>
  <th>Daily</th>
  <th>Weekly</th>
  <th>Biweekly</th>
  <th>Monthly</th>
  <th>Yearly</th>
</tr>

<tr id="mortgage">
  <td>Mortgage</td>
  <td>$<%= (mortgage / 365.00).round(2) %></td>
  <td>$<%= (mortgage / 52.00).round(2) %></td>
  <td>$<%= (mortgage / 26.00).round(2) %></td>
  <td>$<%= (mortgage / 12.00).round(2) %></td>
  <td>$<%= mortgage %></td>
</tr>

<tr id="propertytax">
  <td>Property Tax</td>
  <td>$<%= (propertytax / 365).round(2) %></td>
  <td>$<%= (propertytax / 52).round(2) %></td>
  <td>$<%= (propertytax / 26).round(2) %></td>
  <td>$<%= (propertytax / 12).round(2) %></td>
  <td>$<%= (propertytax).round(2) %> </td>
</tr>

<tr id="propertytax">
  <td>Property Tax</td>
  <td>$<%= (firetax / 365).round(2) %></td>
  <td>$<%= (firetax / 52).round(2) %></td>
  <td>$<%= (firetax / 26).round(2) %></td>
  <td>$<%= (firetax / 12).round(2) %></td>
  <td>$<%= (firetax).round(2) %> </td>
</tr>

<tr id="propertytax">
  <td>Property Tax</td>
  <td>$<%= (homeinsurance / 365).round(2) %></td>
  <td>$<%= (homeinsurance / 52).round(2) %></td>
  <td>$<%= (homeinsurance / 26).round(2) %></td>
  <td>$<%= (homeinsurance / 12).round(2) %></td>
  <td>$<%= (homeinsurance).round(2) %> </td>
</tr>

<tr id="housing_totals">
  <td class="index_total">Total House Expenses</td>
  <td>$<%= (housingtotal / 365).round(2) %></td>
  <td>$<%= (housingtotal / 52).round(2) %></td>
  <td>$<%= (housingtotal / 26).round(2) %></td>
  <td>$<%= (housingtotal / 12).round(2) %></td>
  <td>$<%= housingtotal.round(2) %></td>
</tr>

</table>

<%= link_to "Update Expenses", edit_housingexp_path(current_user), class: "btn btn-secondary"%>
