<h1> Welcome to the Housing Expenses Module! </h1>
<h2>Input your housing expenses below,
    all inputs should be monthly <strong>except</strong>
    property tax, which is a yearly expense:</h2>

    <% if @housingexp.errors.any? %>

      <h2>The following errors prevented the article from getting created</h2>

        <ul>

          <% @housingexp.errors.full_messages.each do |msg| %>

            <li><%= msg %></li>

          <% end %>

        </ul>

    <% end %>

<%= form_for @housingexp do |f| %>

  <div>

    <h3>Monthly</h3>
      <%= f.label :mortgage %><br>
      <%= f.text_field :mortgage  %> <br>

      <%= f.label :electricity %><br>
      <%= f.text_field :electricity  %> <br>

      <%= f.label :water %><br>
      <%= f.text_field :water  %> <br>

      <%= f.label :heating %><br>
      <%= f.text_field :heating  %> <br>

      <%= f.label :entertainment %><br>
      <%= f.text_field :entertainment  %> <br>

    <h3>Yearly</h3>

      <%= f.label :propertytax %><br>
      <%= f.text_field :propertytax  %> <br>

    <%= f.submit %>

  </div>


<% end %>

<%= link_to "View All Housing Expenses", housingexps_path %> <br>
<%= link_to "View Master Expense Sheet", master_path %>
<p>
<%= link_to "Update Expenses", edit_housingexp_path(current_user)%>
</p>
