<h2 class="title">Add your vehicle expenses.</h2>

<% if @carexp.errors.any? %>

  <h2>The following errors prevented the article from getting created</h2>

    <ul>

      <% @carexp.errors.full_messages.each do |msg| %>

        <li><%= msg %></li>

      <% end %>

    </ul>

<% end %>

<div class="container">

    <%= form_for @carexp do |f| %>

    <h3><strong>Monthly</strong></h3>

    <div class="form-group">
      <div class="field">
        <%=  f.label :insurance %> <br>
        <%=  f.text_field :insurance %> <br>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%=  f.label :payment %> <br>
        <%=  f.text_field :payment %> <br>
      </div>
    </div>

    <h3>Yearly</h3>

    <div class="form-group">
      <div class="field">
        <%=  f.label :payment %> <br>
        <%=  f.text_field :payment %> <br>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%=  f.label :gas %> <br>
        <%=  f.text_field :gas %> <br>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%=  f.label :maintenance %> <br>
        <%=  f.text_field :maintenance %> <br>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%=  f.label :taxes %> <br>
        <%=  f.text_field :taxes %> <br>
      </div>
    </div>

    <%= f.submit "Add Car Expenses", class: "btn btn-primary form-control" %>

    <% end %>

    <p>
    <%= link_to "View Car Expenses", carexps_path %>
    </p>

    <p>
    <%= link_to "Update Expenses", edit_carexp_path(current_user)%>
    </p>

    <p>
    <%= link_to "Home", root_path %>
    </p>

</div>
